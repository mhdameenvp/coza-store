                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <div class="card">
                                                    <div class="card-body" style="width:320px">
                                                        <h5 class="card-title "><i class="fa fa-user"
                                                                style="color: #717fe0;"></i> Personal Information</h5>
                                                        <p class="mt-4"><strong>Full Name:</strong> <span
                                                                id="userFirstName">
                                                                <%=userdata.name%>
                                                            </span></p>

                                                        <p><strong>Email Address:</strong> <span id="userEmail">
                                                                <%=userdata.email%>
                                                            </span></p>
                                                        <p><strong>Age:</strong> <span id="userAge">
                                                                <%=userdata.age%>
                                                            </span></p>
                                                        <p><strong>Gender:</strong> <span id="userGender">
                                                                <%=userdata.gender%>
                                                            </span></p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <h5 class="card-title"><i class="fa fa-phone"
                                                                style="color: #717fe0;"></i> Contact Information</h5>
                                                        <p><strong>Phone Number:</strong> <span id="userPhone">
                                                                <%=userdata.mobile%>
                                                            </span></p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card">
                                                <div class="card-body">
                                                    <h5 class="card-title" style="color: #717fe0;">Referral Code</h5>
                                                    <p><strong>Referral code:</strong> <span id="referral"
                                                            style="color: green;">https://amritha.online/referral?refferalId=<%=userdata._id%> 
                                                            </span>
                                                        <button id="copyButton" class="btn border ms-3"
                                                            style="color: white; background:#717fe0">Copy</button>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="text-center mt-4">
                                            <a href="/editProfile" class="btn btn-primary px-4" style="width: 150px;"> <i
                                                    class="fa fa-pencil" aria-hidden="true"></i> Edit Profile</a>
                                        </div>
                                    </div>
                                </div>
                            </div>




                        </div>




                    </div>
                </div>

            </div>



    </div>
