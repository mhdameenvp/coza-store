<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background: linear-gradient(to right, #eef2f3, #8e9eab);
        }

        form {
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #333;
        }

        label {
            font-size: 14px;
            color: #666;
            display: block;
            /* Ensure label displays as block for better spacing */
            margin-top: 20px;
            /* Add some space above the label for better layout */
        }

        input[type=password] {
            width: 100%;
            padding: 10px;
            margin: 10px 0 20px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 4px;
            background-color: #717fe0;
            color: white;
            cursor: pointer;
            font-size: 16px;
        }

        button:hover {
            background-color: #4f61d6;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
    <form>
        <h2>Reset Password</h2>
        <% if (messages.length> 0) { %>
            <p style="color: red;">
                <%= messages %>
            </p>
            <% } %>
                <p id="passwordErr"></p>
                <label for="password">New Password:</label>
                <input type="password" id="password" name="password" required>

                <label for="confirm-password">Confirm Password:</label>
                <p id="comError"></p>
                <input type="password" id="confirmPassword" name="confirmPassword" required>

                <button id="resetbtn" type="submit">Reset Password</button>
    </form>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById("password").addEventListener('blur', function () {

                const pass = this.value
                const passwordErr = document.getElementById('passwordErr')
                if (pass.length === 0) {
                    passwordErr.innerHTML = 'Password is required'
                    passwordErr.style.color = 'red'
                } else if (pass.length < 8) {
                    passwordErr.innerHTML = 'Password min length is 8'
                    passwordErr.style.color = 'red'
                } else if (!pass || pass.trim() == "") {
                    passwordErr.innerHTML = "Phone number is required"
                } else {
                    passwordErr.innerHTML = ""
                }
            })

            document.getElementById('confirmPassword').addEventListener("input", function () {
                const confirmPass = this.value
                const password = document.getElementById('password').value
                const comError = document.getElementById('comError')
                if (confirmPass !== password) {
                    comError.innerHTML = "Password and confirm password is not match"
                    comError.style.color = 'red'
                } else {
                    comError.innerHTML = " "
                }

            })
            document.getElementById('resetbtn').addEventListener('click', function (e) {
                e.preventDefault()


                const password = document.getElementById('password').value

            axios.post('/resetPassword', { password })
                .then(res => {

                    if(res.data.passwordMatch){
                        passwordErr.innerHTML="Your new password cannot be the same as your old password"
                        passwordErr.style.color = 'red'
                    }
                    if (res.data.success) {

                        Swal.fire({
                            title: 'Success!',
                            text: 'Your password has been changed successfully.',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '/login';
                            }
                        });
                    }
                }).catch(err => {
                    console.log('error');
                })


            })


            



        })
    </script>
</body>

</html>